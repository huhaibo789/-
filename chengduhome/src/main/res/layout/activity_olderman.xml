<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
 <RelativeLayout
     android:id="@+id/title_rl"
     android:background="#0fdc3b"
     android:layout_width="match_parent"
     android:layout_height="50dp">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="任务详情"
         android:layout_centerInParent="true"
         android:textSize="18dp"
         android:textColor="#fff"/>
     <ImageView
         android:id="@+id/fanhui_iv"
         android:layout_centerVertical="true"
         android:layout_marginLeft="10dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/arrowreturn"/>
     <TextView
         android:id="@+id/save_tv"
         android:layout_centerVertical="true"
         android:textSize="18dp"
         android:textColor="#fff"
         android:layout_marginRight="10dp"
         android:layout_alignParentRight="true"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="保存"/>
 </RelativeLayout>
    <ImageView
        android:id="@+id/img_iv"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/title_rl"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/icon"/>
   <TextView
       android:id="@+id/name_tv"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="30dp"
       android:layout_below="@+id/title_rl"
       android:layout_toRightOf="@+id/img_iv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="姓名:张三"
       android:textSize="15dp"/>

    <TextView
        android:id="@+id/sex_tv"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/name_tv"
        android:layout_toRightOf="@+id/img_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="性别：女"/>
    <View
        android:id="@+id/xian_view"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/sex_tv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999"/>
    <RelativeLayout
        android:id="@+id/pass_dask"
        android:layout_below="@+id/xian_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史任务"
            android:textSize="18dp"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/returnright"/>
    </RelativeLayout>
<View
    android:id="@+id/xian_view1"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_below="@+id/pass_dask"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#999"/>
    <TextView
        android:id="@+id/today_task"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/xian_view1"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日任务"/>
    <EditText
        android:id="@+id/reason_edit"
         android:layout_marginTop="10dp"
        android:hint="请输入原因"
        android:layout_below="@+id/today_task"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/edit_finish"
        />
    <TextView
        android:id="@+id/evluate_tv"
        android:textColor="#222"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/reason_edit"
        android:layout_alignLeft="@+id/edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评价图片"/>
    <GridView
        android:layout_below="@+id/evluate_tv"
        android:id="@+id/gridView1"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="#EFDFDF"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp"
        android:numColumns="4"
        android:columnWidth="90dp"
        android:stretchMode="columnWidth"
        android:gravity="center" >
    </GridView>
</RelativeLayout>
