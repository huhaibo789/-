<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.chengduhome.HelpermessageActivity">
  <RelativeLayout
      android:id="@+id/help_rl"
      android:background="#05e65b"
      android:layout_width="match_parent"
      android:layout_height="50dp">
      <ImageView
          android:padding="10dp"
          android:id="@+id/fanhui"
          android:layout_marginLeft="10dp"
          android:layout_centerVertical="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/arrowreturn"/>
      <TextView
          android:textColor="#fff"
          android:textSize="18dp"
          android:layout_centerInParent="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/search__text"/>
      <ImageView
          android:id="@+id/quick_iv"
          android:layout_marginRight="10dp"
          android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/scan"/>
  </RelativeLayout>
    <RelativeLayout
        android:id="@+id/search_rl"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
           android:layout_centerHorizontal="true"
            android:id="@+id/older_edit"
            android:gravity="center_horizontal"
            android:hint="请输入老人姓名或号码"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/beijing_back"/>
        <Button
            android:id="@+id/search_btn"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:background="#0fdc3b"
            android:layout_toRightOf="@+id/older_edit"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/unfinish_tv"
            android:background="#0fdc3b"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="未完成"/>
        <TextView
            android:id="@+id/finish_tv"
            android:background="#dcdada"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="已完成"/>

    </LinearLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/list_help"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:ptrAnimationStyle="flip">
    </com.handmark.pulltorefresh.library.PullToRefreshListView>
</LinearLayout>
